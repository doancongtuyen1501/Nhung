<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:weightSum="21"
  android:orientation="vertical"
  android:paddingBottom="16dp"
  android:paddingRight="16dp"
  android:paddingLeft="16dp"
  android:paddingTop="16dp"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:weightSum="30"
    android:orientation="horizontal">

    <ImageButton
      android:id="@+id/ibClose"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:background="@android:color/transparent"
      android:layout_weight="1"
      app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
      android:contentDescription="@string/todo" />

    <ProgressBar
      android:id="@+id/pbProgressRegister"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_weight="28"
      android:layout_marginHorizontal="24dp"/>
    <ImageButton
      android:id="@+id/ibAdjust"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_weight="1"
      android:background="@android:color/transparent"
      android:src="@drawable/ibapp" />


  </LinearLayout>

  <TextView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Phân kì"
    android:textColor="#353532"
    android:textSize="32dp"
    android:id="@+id/tvIn"
    />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="19"/>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:weightSum="7">
    <TextView
      android:layout_weight="5"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:layout_gravity="bottom"
      android:textSize="25sp"
      android:id="@+id/editDataEntry"
      android:autofillHints="" />
  </LinearLayout>

<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="1"
  android:weightSum="12">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Converge"
    android:layout_weight="8"
    android:textSize="25sp"
    android:textColor="#27AA03"/>
  <ImageButton
    android:layout_width="78dp"
    android:layout_height="50dp"
    android:layout_weight="4"
    android:background="@android:color/transparent"
    android:src="@drawable/tick" />

</LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#27AA03"/>

  <TextView
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="@string/p_n_ng"
    android:textColor="#27AA03"
    android:textSize="12sp"/>
</LinearLayout>